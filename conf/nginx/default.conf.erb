worker_processes 4;
daemon off;

events {
    worker_connections  1024;
}

http {
    sendfile    on;
    tcp_nopush  on;

    keepalive_timeout  65;

    error_log logs/error.log notice;
    access_log logs/access.log;

    server {
        listen <%= ENV['PORT'] %>;
        server_name localhost;
        root <%= ENV['DOCUMENT_ROOT'] %>;
    }

    <% if ENV['FRAMEWORK'] %>
    include <%= ENV['FRAMEWORK'] %>.conf;
    <% end %>
}
